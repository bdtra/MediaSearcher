@model MediaSearcher.ViewModels.SearchViewModel

<!--centering div to align entire display-->
<div align="center">
    <h1>Twitter Searcher</h1>
    <br />
    <br />

    <!--Keyword/Hashtag and sample size input form-->
    @using (Html.BeginForm("Create", "Search", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Keyword, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Keyword, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.SampleSize, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.SampleSize, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Search Keyword" />
            </div>
        </div>
    }
    <br />
    <br />

    <!--Data display table; iterates through all items and displays them.-->
    @if (Model.Errors != null)
    {
        foreach (var i in Model.Errors)
        {
            <p>@i.ErrorMessage</p>
            <p>@i.Exception</p>
        }
    }
</div>